<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Inventory</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
  <main class="add-inventory-main">
    <h1>Add Inventory Item</h1>
    <% if (typeof messages === "function" && messages().trim()) { %>
      <div class="flash-message"><%- messages() %></div>
    <% } %>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <div class="flash-message">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form action="/inv/add-inventory" method="post" novalidate>
      <label for="classificationList">Classification</label>
      <%- classificationList %>

      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
        autocomplete="off"
      >

      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
        autocomplete="off"
      >

      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        min="1900"
        max="2099"
        required
        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
        autocomplete="off"
      >

      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
      ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
        autocomplete="off"
      >

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
        autocomplete="off"
      >

      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        min="0"
        step="0.01"
        required
        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
        autocomplete="off"
      >

      <label for="inv_miles">Miles</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        min="0"
        required
        value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
        autocomplete="off"
      >

      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
        autocomplete="off"
      >

      <button type="submit">Add Inventory</button>
    </form>
  </main>
</body>
</html>