<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Delete Inventory</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <main class="delete-inventory-main">
    <h1><%= title %></h1>
    <% if (typeof messages === "function" && messages().trim()) { %>
      <div class="flash-message"><%- messages() %></div>
    <% } %>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <div class="flash-message">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <p>Confirm Deletion - The delete is permanent.</p>
    <form action="/inv/delete/" method="post">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        value="<%= item.inv_make %>"
        readonly
      >

      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        value="<%= item.inv_model %>"
        readonly
      >

      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        value="<%= item.inv_year %>"
        readonly
      >

      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        value="<%= item.inv_price %>"
        readonly
      >

      <input type="hidden" name="inv_id" value="<%= item.inv_id %>">

      <button type="submit">Delete</button>
    </form>
  </main>