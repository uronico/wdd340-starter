<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Inventory</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <main class="edit-vehicle-main">
    <h1><%= title %></h1>
    <% if (typeof messages === "function" && messages().trim()) { %>
      <div class="flash-message"><%- messages() %></div>
    <% } %>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <div class="flash-message">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form action="/inv/update-inventory" method="post" novalidate>
      <label for="classificationList">Classification</label>
      <%- classificationList %>

      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= item.inv_make %>"
        autocomplete="off"
      >

      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= item.inv_model %>"
        autocomplete="off"
      >

      <label for="inv_year">Year</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        min="1900"
        max="2099"
        required
        value="<%= item.inv_year %>"
        autocomplete="off"
      >

      <label for="inv_description">Description</label>
      <textarea
        id="inv_description"
        name="inv_description"
        required
      ><%= item.inv_description %></textarea>

      <label for="inv_image">Image Path</label>
      <input
        type="text"
        id="inv_image"
        name="inv_image"
        required
        value="<%= item.inv_image %>"
        autocomplete="off"
      >

      <label for="inv_thumbnail">Thumbnail Path</label>
      <input
        type="text"
        id="inv_thumbnail"
        name="inv_thumbnail"
        required
        value="<%= item.inv_thumbnail %>"
        autocomplete="off"
      >

      <label for="inv_price">Price</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        min="0"
        step="0.01"
        required
        value="<%= item.inv_price %>"
        autocomplete="off"
      >

      <label for="inv_miles">Miles</label>
      <input
        type="number"
        id="inv_miles"
        name="inv_miles"
        min="0"
        required
        value="<%= item.inv_miles %>"
        autocomplete="off"
      >

      <label for="inv_color">Color</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        value="<%= item.inv_color %>"
        autocomplete="off"
      >

      <input type="hidden" name="inv_id" value="<%= item.inv_id %>">

      <button type="submit">Update Vehicle</button>
    </form>
  </main>
</body>
</html>  